<Window x:Class="KinectHandTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect 2 hand tracking" Height="800" Width="1200" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Viewbox>
            <Grid Width="1920" Height="1080">
                <Image Name="camera" />
                <Canvas Name="canvas" />

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Right hand:" Margin="0,0,5,0" Style="{StaticResource TitleStyle}" />
                    <TextBlock Name="tblRightHandState" Margin="0,0,5,0" Text="-" Style="{StaticResource TitleStyle}" />
                </StackPanel>
                <StackPanel Margin="0,35,0,0" Orientation="Horizontal">
                    <TextBlock Text="Left hand:" Margin="0,50,5,0" Style="{StaticResource TitleStyle}" />
                    <TextBlock Name="tblLeftHandState" Margin="0,50,5,0" Text="-" Style="{StaticResource TitleStyle}" />
                </StackPanel>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
